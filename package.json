{
  "private": true,
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-rx": "^0.0.3",
    "rx-webpack-plugin": "^0.0.3",
    "chalk": "^1.1.3",
    "codecov": "^1.0.1",
    "glob": "^7.1.1",
    "istanbul-api": "^1.0.0-aplha.10",
    "istanbul-lib-coverage": "^1.0.0",
    "jest": "^16.0.2",
    "lerna": "2.0.0-beta.30",
    "minimatch": "^3.0.3",
    "webpack": "^1.13.2"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean-dist": "rm -rf ./packages/*/dist",
    "clean-compile": "rm -rf ./packages/*/lib",
    "clean-coverage": "rm -rf ./coverage",
    "clean-node-modules": "rm -rf ./packages/*/node_modules",
    "clean-all": "npm run clean-node-modules; npm run clean-dist; npm run clean-coverage",
    "compile": "npm run clean-compile && node ./scripts/compile.js",
    "dist": "npm run clean-dist && node ./scripts/dist.js",
    "build": "npm run compile; npm run dist",
    "test": "npm run clean-compile && jest",
    "test-coverage": "npm run test -- --coverage",
    "coverage": "npm run clean-coverage && npm run test-coverage && node ./scripts/mapCoverage.js && codecov",
    "publish": "npm run test && lerna publish"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true
  }
}
