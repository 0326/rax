{
  "private": true,
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-rax": "0.0.*",
    "chalk": "^1.1.3",
    "codecov": "^1.0.1",
    "conventional-commit-types": "^2.1.0",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.9.1",
    "eslint-plugin-react": "^6.6.0",
    "findup": "^0.1.5",
    "ghooks": "^1.3.2",
    "glob": "^7.1.1",
    "istanbul-api": "^1.0.0-aplha.10",
    "istanbul-lib-coverage": "^1.0.0",
    "jest": "^16.0.2",
    "lerna": "^2.0.0-beta.31",
    "minimatch": "^3.0.3",
    "rax-webpack-plugin": "0.0.*",
    "redux": "^3.6.0",
    "semver-regex": "^1.0.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "scripts": {
    "link": "node ./scripts/link.js",
    "bootstrap": "lerna bootstrap",
    "setup": "npm run link && npm run bootstrap",
    "compile": "npm run clean:compile && node ./scripts/compile.js",
    "dist": "npm run clean:dist && node ./scripts/dist.js",
    "build": "npm run compile && npm run dist",
    "test": "jest",
    "watch:test": "jest --watch",
    "start": "npm run build && node ./scripts/start.js",
    "lint": "eslint --fix --ext .js --ext .jsx ./",
    "coverage": "npm run test -- --coverage",
    "coverage:upload": "npm run clean:coverage && npm run coverage && node ./scripts/mapCoverage.js && codecov",
    "build:examples": "node ./scripts/build-examples.js",
    "prepublish": "npm run bootstrap && npm run build && npm run lint && npm run test",
    "publish": "lerna publish --force-publish=* --skip-git",
    "clean:dist": "rm -rf ./packages/*/dist",
    "clean:compile": "rm -rf ./packages/*/lib",
    "clean:coverage": "rm -rf ./coverage",
    "clean:modules": "rm -rf ./packages/*/node_modules",
    "clean": "npm run clean:modules; npm run clean:compile; npm run clean:dist; npm run clean:coverage"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true
  },
  "config": {
    "ghooks": {
      "commit-msg": "./scripts/validate-commit-msg.js"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
